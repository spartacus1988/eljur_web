@*@model IEnumerable<eljur_web.Models.Events>*@

@using eljur_web.Models

@model eljur_web.Models.IndexViewModel

@{Layout = "~/Views/Shared/_ViewStart.cshtml";}


@{
    ViewData["Title"] = "Index";

}

<link href="/bootstrap4-glyphicons/css/bootstrap-glyphicons.min.css" rel="stylesheet" type="text/css" />

<h2>Список событий по ученикам</h2>

<table class="table">
    <tr>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.EventIdSort)">Ид события</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.EventNameSort)">Имя события</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.NotifyEnableSort)">Уведомления для родителей разрешены</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.NotifyEnableSort)">Уведомления для администрации разрешены</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.NotifyWasSendSort)">Уведомление для родителей было отправлено</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.NotifyWasSendSort)">Уведомление для администрации было отправлено</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.EventTimeSort)">Время события</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.PupilIdOldSort)">Ид пропуска ученика</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.EljurAccountIdSort)">Ид ЭлЖур ученика</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.FullFioSort)">ФИО</a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.ClasSort)">Класс</a>
        </th>
    </tr>
    @*@foreach (Events e in Model.Events)*@
    @foreach (var pair in Model.mapEventsPupils)
    {
    <tr>
        <td>@pair.Key.EventId</td>
        <td>@pair.Key.EventName</td>
        <td>@pair.Key.NotifyEnable</td>
        <td>@pair.Key.NotifyEnableDirector</td>
        <td>@pair.Key.NotifyWasSend</td>
        <td>@pair.Key.NotifyWasSendDirector</td>
        <td>@pair.Key.EventTime</td>
        <td>@pair.Key.PupilIdOld</td>
        <td>@pair.Value.EljurAccountId</td>
        <td>@pair.Value.FullFio</td>
        <td>@pair.Value.Clas</td>

    </tr>
    }
</table>

@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       asp-route-sortorder="@(Model.SortViewModel.Current)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}

@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       asp-route-sortorder="@(Model.SortViewModel.Current)"
       class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}



